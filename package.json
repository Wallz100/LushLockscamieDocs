{
  "name": "camie-backend",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "node --enable-source-maps src/index.js",
    "start": "node src/index.js",
    "db:generate": "node -e \"import('./src/db/index.js').then(m=>m.generateMigration()).catch(e=>{console.error(e);process.exit(1)})\"",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "lint": "echo \"no lint configured\"",
    "test": "node src/index.js --selftest"
  },
  "dependencies": {
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "debug": "^4.3.4",
    "dotenv": "^16.4.5",
    "drizzle-kit": "^0.31.5",
    "drizzle-orm": "^0.44.6",
    "express": "^4.19.2",
    "jsonwebtoken": "^9.0.2",
    "node-fetch": "^3.3.2",
    "nodemailer": "^7.0.9",
    "postgres": "^3.4.4",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "eslint": "^8.57.0"
  }
}
